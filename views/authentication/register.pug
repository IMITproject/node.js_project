
extends ../layout

block content
  h3 Регистрация пользователя
  form(action="/register" method="POST")
    .form-group.mb-3
      input(type="text" name="username" placeholder="Логин" class="form-control" required)
    .form-group.mb-3
      input(type="password" name="password" placeholder="Пароль" class="form-control" required)
    .form-group.mb-3
      input(type="submit" value="Зарегистрировать" class="btn btn-success")
  h4.text-center.text-danger #{message}
